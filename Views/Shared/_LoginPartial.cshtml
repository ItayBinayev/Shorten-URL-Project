<ul class="navbar-nav">
@if (User.Identity!.IsAuthenticated)
{
    <li class="nav-item">
            <a class="nav-link text-light" title="Manage">Hello @User.Identity?.Name!</a>
    </li>

    <li class="nav-item">
                <a class="nav-link btn btn-link text-light" asp-action="Edit" asp-controller="Access">Profile <i class="fa-regular fa-user text-light"></i></a>
