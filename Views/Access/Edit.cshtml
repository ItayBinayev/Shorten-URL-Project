@model UserManagerModel
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-body mt-2">
                    <h3 class="card-title text-center text-black">Edit Profile</h3>

                    @using (Html.BeginForm("Edit", "Access", FormMethod.Post))
                    {
                        <input type="hidden" value="@Model.Id" asp-for="Id"/>

                        <div class="form-group text-black mb-4">
                            <label for="firstname">First Name:</label>
                            <input type="text" class="form-control" id="firstname" value="@Model.FirstName" asp-for="FirstName">
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="lastname">Last Name:</label>
                            <input type="text" class="form-control" id="lastname" value="@Model.LastName" asp-for="LastName">
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="email">Email:</label>
                            <input type="text" class="form-control" id="email" value="@Model.Email" asp-for="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" value="@Model.Password" asp-for="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <button type="submit" class="btn btn-dark btn-block">Edit</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>