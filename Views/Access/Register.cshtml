@model UserRegister
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-body mt-2">
                    <h3 class="card-title text-center text-black">Registration Form</h3>

					@using (Html.BeginForm("Register", "Access", FormMethod.Post))
                    {
                                                <div class="form-group text-black mb-4">
                            <label for="firstname">First Name:</label>
                            <input type="text" class="form-control" id="firstname" placeholder="Enter First Name" asp-for="FirstName">
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="lastname">Last Name:</label>
                            <input type="text" class="form-control" id="lastname" placeholder="Enter Last Name" asp-for="LastName">
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="email">Email:</label>
                            <input type="text" class="form-control" id="email" placeholder="Enter email"asp-for="Email">
                             <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" placeholder="Enter password" asp-for="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group text-black mb-4">
                            <label for="confirm_password">Confirm Password:</label>
                            <input type="password" class="form-control" id="confirm_password" placeholder="Confirm password" asp-for="PasswordValid">
                            <span class="text-danger" asp-validation-for="PasswordValid"></span>

                        </div>
                        <button type="submit" class="btn btn-dark btn-block">Register</button>
                    }
                    @if (ViewData["ValidateMessageRegister"] != null)
                    {
                        <br />
                        <label class="text-danger">@ViewData["ValidateMessageRegister"]</label>
                    }
                </div>
            </div>
        </div>
    </div>
</div>